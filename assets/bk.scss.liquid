.s-drawer {
  z-index: $z-drawer;
  height: 100%;
  padding: 0 15px 15px;
  overflow: auto;
  position: fixed;
  width: 100%;
  top: 0;
  transition: $drawer-transition;
  background-color: $drawer-bg-color;

  @media (min-width: 480px) {
