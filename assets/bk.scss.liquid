// =======================================================================================================================================
// COMPONENTS
// =======================================================================================================================================

// ################################################################################
// COMPONENT - ICONS
// ################################################################################
.s-icon {
  display: inline-block;
  width: 1em;
  height: 1em;
  stroke-width: 0;
  stroke: currentColor;
  fill: currentColor;

  &.s-icon--x {
    stroke-width: 10px;
  }
}

// ################################################################################
// COMPONENT - CHECKBOX
// ################################################################################
.checkbox {
  position: relative;
  width: 100%;
}

.checkbox__label + input[type="checkbox"],
.checkbox__box {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}

.checkbox__label {
  margin-bottom: 0;
  position: relative;
  z-index: $z-check-label;
  font-size: 1em;

  + input[type="checkbox"] {
    opacity: 0;
    visibility: hidden;
  }
}

.checkbox__box {
  width: 1em;
  height: 1em;
  border: 1px solid #6e6e6e;
  cursor: pointer;

  .s-icon--x {
    position: absolute;
    width: em(14px);
    height: em(14px);
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    display: none;

    input[type="checkbox"]:checked + & {
      display: inline-block;
    }
  }
}


// ################################################################################
// COMPONENT - ACCORDION
// ################################################################################
.accordion-section {
  border-style: solid;
  border-color: #e6e6e6;
  border-width: 1px 0 1px 0;
  margin: 0 auto $section-spacing-small;
  max-width: 750px;
  
  @media (min-width: $md-min) {
    border-width: 1px;
    margin-bottom: $section-spacing;
  }
  
  &:last-child {
    margin-bottom: 0;
  }
}

.accordion-section h2 {
  margin-bottom: 0;
  padding: 10px;
  background-color: #e6e6e6;
  font-size: 20px;
  font-weight: 600;
}

.accordion {
  text-align: center;
  border-bottom: 2px solid $color-border;
  
  &:last-of-type {
    border: 0;
  }
}

.accordion__toggle {
  display: block;
  width: 100%;
  background: 0;
  border-style: solid;
  border: 0;
  padding: 20px 60px;
  font-family: $font-stack-header;
  font-weight: $h-font-weight-semi-bold;
  color: $color-text;
  position: relative;
  font-size: 1.0625em;
  margin: 0;
  cursor: pointer;

  @media (max-width: $md-max) {
    padding: 20px 40px;
    font-size: 0.9375em;
  }
  
  &:focus {
    outline: none;
  }
  
  &:hover {
    background-color: #f4f4f4;
  }
  
  &::after {
    content: "+";
    position: absolute;
    right: 30px;
    top: 50%;
    transform: translateY(-50%);
    font-family: $font-stack-body;

    @media (max-width: $md-max) {
      right: 20px;
    }
  }
  
  &.active {
    color: #36ace3;

    &::after {
      content: "\2013";
    }
  }
}


.accordion__content {
  display: none;
}

.accordion__inner {
  padding: 0 20px 20px 20px;

  a {
    text-decoration: underline;
  }

  table {
    margin-top: 20px;
    margin-bottom: 15px;
  }

  tbody {
    border: 1px solid #dbdbdb;
  }

  td {
    border: 0;
  }

  th {
