// =======================================================================================================================================
// UTILS
// =======================================================================================================================================

// ################################################################################
// UTIL - VARIABLES
// ################################################################################

// == Colors
$white: #fff;
$black: #000;

$bg-contrast: #efefef;

// Body text
$color-body-text: {{ settings.color_body_text }};

// Headings
$color-text: {{ settings.color_text }};

$color-link: {{ settings.color_link }};
$color-border: {{ settings.color_borders }};

// == Sizing
$site-min-width: 320px;
$site-max-width: 1200px;

$gutter-site: 30px;
$gutter-site-mobile: 22px;

$grid-gutter: 30px;
$grid-gutter-mobile: 22px;

$section-spacing: 55px;
$section-spacing-small: 35px;
$border-radius: 2px;

// == Typography
$font-stack-header: "Raleway", sans-serif;
$font-stack-body: "Lato", sans-serif;

$font-weight-light: 300;
$font-weight-regular: 400;
$font-weight-bold: 700;

$h-font-weight-medium: 500;
$h-font-weight-semi-bold: 600;
$h-font-weight-bold: 700;

$base-font-size: 16px;
$base-font-weight: $font-weight-light;
$base-h-font-weight: $h-font-weight-medium;

// == Breakpoints
$md-min: 750px;
$md-max: $md-min - 1px;
$lg-min: 990px;
$lg-max: $lg-min - 1px;


$z-shopbar: 500;
$z-check-label: 20;


// ################################################################################
// UTIL - FUNCTIONS
// ################################################################################
@function em($target, $context: $base-font-size) {
  @if $target == 0 {
    @return 0;
  }
  @return $target / $context + 0em;
}

@function rem($target, $context: $base-font-size) {
  @if $target == 0 {
    @return 0;
  }
  @return $target / $context + 0rem;
}

// ################################################################################
// UTIL - MIXINS
// ################################################################################
@mixin clearfix() {
  &::after {
    content: '';
    display: table;
    clear: both;
  }

  // sass-lint:disable no-misspelled-properties
  *zoom: 1;
}

@mixin make-section() {
  padding-top: $section-spacing-small;
  padding-bottom: $section-spacing-small;

  @media (min-width: $md-min) {
    padding-top: $section-spacing;
    padding-bottom: $section-spacing;
  }
}

@mixin make-container($max-width: $site-max-width) {
  max-width: $max-width;
  margin-left: auto;
  margin-right: auto;
  padding-left: $gutter-site-mobile;
  padding-right: $gutter-site-mobile;
  
  @media (min-width: $md-min) {
    padding-left: $gutter-site;
    padding-right: $gutter-site;
  }
}

@mixin make-row($mobile: $grid-gutter-mobile, $desktop: $grid-gutter) {
  margin-left: $mobile * -1;
  margin-right: $mobile * -1;

  @media (min-width: $md-min) {
    margin-left: $desktop * -1;
    margin-right: $desktop * -1;
  }
}

@mixin make-col-ready($mobile: $grid-gutter-mobile, $desktop: $grid-gutter) {
  padding-left: $mobile;
  padding-right: $mobile;

  @media (min-width: $md-min) {
    padding-left: $desktop;
    padding-right: $desktop;
  }
}

// ################################################################################
// UTIL - CLASSES
// ################################################################################
.no-hover:hover,
.no-hover:focus {
  opacity: 1;
}

// =======================================================================================================================================
// BASE
// =======================================================================================================================================

body {
  min-width: $site-min-width;
  font-weight: $base-font-weight;
}


// ################################################################################
// BASE - TYPOGRAPHY
// ################################################################################
.lead {
  font-size: em(18px);
}

.section-subtext {
  max-width: 575px;
  margin-left: auto;
  margin-right: auto;
}

.section {
  @include make-section;
}


// =======================================================================================================================================
// LAYOUT
// =======================================================================================================================================

.full-container {
  @include make-container(100%);
}

.small--border-top {
  @media (max-width: $md-max) {
    border-top: 1px solid $color-border;
  }
}

.large-up--grid-rev {
  @media (min-width: $lg-min) {
    direction: rtl;
    text-align: left;

    > .grid__item {
      direction: ltr;
      text-align: left;
      float: right;
    }
  }
}

.grid--uniform .medium-up--one-quarter {
  @media (min-width: $md-min) {
    // Revert 1/2
    &:nth-child(2n + 1) {
      clear: none;
    }

    // Clear 1/4
    &:nth-child(4n + 1) {
      clear: both;
    }
  }
}

.grid--uniform .medium-up--one-third {
  @media (min-width: $md-min) {
    // Revert 1/2
    &:nth-child(2n + 1) {
      clear: none;
    }

    // Clear 1/3
    &:nth-child(3n + 1) {
      clear: both;
    }
  }
}

