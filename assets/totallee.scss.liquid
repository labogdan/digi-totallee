  border-width: 1px;
}

.accordion-toggle__svg,
.accordion-toggle__text {
  display: inline-block;
}

.accordion-toggle__text {
  color: #6e6e6e;
  font-size: 1.2em;
  font-weight: 500;
  @media (max-width: $md-min) { 
    font-size:16px; 
  }
}
.accordion-toggle__svg {
  line-height: 0;
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);

  .s-icon--minus {
    display: none;
  }
}

