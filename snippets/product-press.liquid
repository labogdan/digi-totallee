{% if section.settings.show_press %}
  <div class="index-section">
    <div class="page-width">
      {% if section.settings.press_title != blank %}
        <div class="hp-press-header section-header text-center">
          <h3 class="h1">{{ section.settings.press_title }}</h3>
        </div>

        <div class="hp-press" id="hp-press">
          {% for block in section.blocks %}
            {% unless block.type == 'press' %}
              {% continue %}
            {% endunless %}
            <div class="hp-press__item">
              <h2 class="hp-press__quote font-base font-light color-body-text">{{ block.settings.quote }}</h2>
              <a class="hp-press__link">
                <img data-src="{{ block.settings.image | img_url: '320x' }}" alt="{{ block.settings.image.alt }}" class="lazyload hp-press__image">
              </a>
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
{% endif %}
